{
	"$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["./src-tauri/**", "node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 1,
		"bracketSpacing": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"ignore": ["./node_modules/**", "./src-tauri/**"],
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"quoteProperties": "preserve",
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"semicolons": "always",
			"jsxQuoteStyle": "single",
			"enabled": true,
			"bracketSpacing": true
		}
	}
}
